---
/* No props needed */
---

<header
  class="w-full bg-gray-900/80 backdrop-blur-xl border-b border-gray-700
         sticky top-0 z-50 shadow-lg"
>
  <div
    class="max-w-[1600px] mx-auto px-6 py-4 flex items-center justify-between"
  >
    <a href="/" class="flex items-center gap-3 group transition">
      <div
        class="h-10 w-10 border border-teal-400/40 rounded-xl overflow-hidden
         shadow-sm bg-teal-500/10 group-hover:bg-teal-500/20 transition"
      >
        <img
          src="/icon.png"
          alt="QualiLife AI"
          class="h-full w-full object-cover"
        />
      </div>

      <div class="leading-tight">
        <h1
          class="text-xl font-extrabold text-teal-300 tracking-wide
                 group-hover:text-teal-200 transition"
        >
          QualiLife AI
        </h1>
        <p class="text-xs text-gray-400 group-hover:text-gray-300 transition">
          Inteligencia Global Asistida por IA
        </p>
      </div>
    </a>

    <nav class="hidden md:flex items-center gap-8">
      <a href="/" class="text-gray-300 hover:text-teal-300 transition">Inicio</a
      >
      <a href="/acerca" class="text-gray-300 hover:text-teal-300 transition"
        >Acerca</a
      >
      <a
        href="/documentacion"
        class="text-gray-300 hover:text-teal-300 transition"
      >
        Documentación
      </a>
    </nav>

    <button
      id="mobile-menu-btn"
      class="md:hidden text-gray-300 hover:text-teal-300 text-2xl focus:outline-none"
    >
      ☰
    </button>
  </div>

  <nav
    id="mobile-menu"
    class="md:hidden bg-gray-900/95 backdrop-blur-xl border-t border-gray-700
           px-6 py-4 space-y-4 hidden opacity-0 transform translate-y-[-10px]
           transition-all duration-300"
  >
    <a
      href="/"
      class="block text-gray-300 hover:text-teal-300 text-lg transition"
    >
      Inicio
    </a>
    <a
      href="/acerca"
      class="block text-gray-300 hover:text-teal-300 text-lg transition"
    >
      Acerca
    </a>
    <a
      href="/documentacion"
      class="block text-gray-300 hover:text-teal-300 text-lg transition"
    >
      Documentación
    </a>
  </nav>

  <script>
    // @ts-nocheck
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    btn.onclick = () => {
      const isOpen = !menu.classList.contains("hidden");

      if (isOpen) {
        menu.classList.add("opacity-0", "translate-y-[-10px]");
        setTimeout(() => menu.classList.add("hidden"), 200);
      } else {
        menu.classList.remove("hidden");
        setTimeout(() => {
          menu.classList.remove("opacity-0", "translate-y-[-10px]");
          menu.classList.add("opacity-100", "translate-y-0");
        }, 10);
      }
    };

    document.querySelectorAll("#mobile-menu a").forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("opacity-0");
        setTimeout(() => menu.classList.add("hidden"), 200);
      });
    });
  </script>
</header>
